{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/refs/heads/main/npm/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "error",
    "perf": "error"
  },
  "plugins": [
    "eslint",
    "typescript",
    "unicorn",
    "oxc",
    "import",
    "promise",
    "node",
    "jsx-a11y",
    "vue",
    "regex"
  ],
  "env": {
    "builtin": true,
    "node": true,
    "es2024": true
  },
  "rules": {
    // Errors
    /// eslint
    "eslint/no-empty": "error",
    "eslint/no-proto": "error",
    "eslint/eqeqeq": "error",
    "eslint/no-unused-vars": "error",
    "eslint/no-eq-null": "error",
    "eslint/no-multi-assign": "error",
    "eslint/no-unused-expressions": "error",
    "eslint/no-var": "error",
    "eslint/no-void": "error",
    "eslint/arrow-body-style": "error",
    "eslint/default-case-last": "error",
    "eslint/default-param-last": "error",
    "eslint/guard-for-in": "error",
    "eslint/no-extra-label": "error",
    "eslint/no-label-var": "error",
    "eslint/no-lone-blocks": "error",
    "eslint/no-nested-ternary": "error",
    "eslint/no-new-func": "error",
    "eslint/no-return-assign": "error",
    "eslint/yoda": "error",
    "eslint/getter-return": "error",
    "eslint/no-unreachable": "error",
    /// eslint-plugin-import
    "import/extensions": ["error", "ignorePackages"],
    "import/first": "error",
    "import/no-dynamic-require": "error",
    "import/export": "error",
    "import/named": "error",
    /// eslint-plugin-jsdoc
    "jsdoc/check-access": "error",
    "jsdoc/check-empty-tags": "error",
    /// eslint-plugin-n
    "node/no-exports-assign": "error",
    /// oxc
    "oxc/bad-bitwise-operator": "error",
    "oxc/no-barrel-file": ["error", 10],
    "oxc/no-const-enum": "error",
    "oxc/no-map-spread": "error",
    /// promise
    "promise/catch-or-return": "error",
    "promise/prefer-await-to-callbacks": "error",
    "promise/prefer-catch": "error",
    "promise/no-return-in-finally": "error",
    "promise/no-nesting": "error",
    /// typescript-eslint'
    "typescript/explict-module-boundary-types": "error",
    "typescript/explict-function-return-type": "error",
    "typescript/no-dynamic-delete": "error",
    "typescript/no-import-type-side-effects": "error",
    "typescript/adjacent-overload-signatures": "error",
    "typescript/no-empty-interface": "error",
    "typescript/prefer-for-of": "error",
    "typescript/prefer-namespace-keyword": "error",
    "typescript/consistent-type-imports": "error",
    "typescript/no-unused-vars": "error",
    "typescript/prefer-literal-enum-member": "error",
    // eslint-plugin-unicorn
    "unicorn/no-unreadable-array-destructuring": "error",
    "unicorn/prefer-array-flat-map": "error",
    "unicorn/no-abusive-eslint-disable": "error",
    "unicorn/no-length-as-slice-end": "error",
    "unicorn/prefer-node-protocol": "error",
    "unicorn/prefer-number-properties": "error",
    "unicorn/consistent-date-clone": "error",
    "unicorn/error-message": "error",
    "unicorn/no-array-method-this-argument": "error",
    "unicorn/prefer-array-index-of": "error",
    "unicorn/prefer-dom-node-text-content": "error",
    "unicorn/prefer-includes": "error",
    "unicorn/prefer-object-from-entries": "error",
    "unicorn/prefer-reflect-apply": "error",
    "unicorn/require-array-join-separator": "error",
    "unicorn/switch-case-braces": "error",
    "unicorn/throw-new-error": "error",
    // Warnings
    /// eslint
    "eslint/no-empty-function": "warn",
    "eslint/grouped-accessor-pairs": "warn",
    "eslint/max-params": ["warn", {
      "max": 4,
      "countVoidThis": false
    }],
    "eslint/max-depth": ["warn", 4],
    "eslint/max-lines-per-function": ["warn", 250],
    "eslint/max-nested-callbacks": ["warn", 3],
    "eslint/max-lines": ["warn", 1000],
    "eslint/no-duplicate-imports": "warn",
    "eslint/no-labels": "warn",
    "eslint/no-template-curly-in-string": "warn",
    "eslint/operator-assignment": "warn",
    "eslint/prefer-numeric-literals": "warn",
    "eslint/prefer-object-has-own": "warn",
    "eslint/prefer-object-spread": "warn",
    "eslint/prefer-spread": "warn",
    "eslint/sort-vars": "warn",
    /// eslint-plugin-import
    "import/no-cycle": "warn",
    "import/no-duplicates": "warn",
    /// typescript-eslint
    "typescript/no-non-null-asserted-nullish-coalescing": "warn",
    "typescript/no-var-requires": "warn",
    "typescript/consistent-generic-constructors": ["warn", "constructor"],
    "typescript/consistent-indexed-object-style": "warn",
    "typescript/consistent-type-definitions": "warn",
    "typescript/no-inferrable-types": "warn",
    "typescript/prefer-function-type": "warn",
    /// eslint-plugin-unicorn
    "unicorn/empty-brace-spaces": "warn",
    "unicorn/no-console-spaces": "warn",
    "unicorn/no-zero-fractions": "warn",
    "unicorn/number-literal-case": "warn",
    "unicorn/prefer-global-this": "warn",
    "unicorn/prefer-logical-operator-over-ternary": "warn",
    "unicorn/prefer-modern-dom-apis": "warn",
    "unicorn/prefer-negative-index": "warn",
    "unicorn/prefer-optional-catch-binding": "warn",
    "unicorn/prefer-string-raw": "warn",
    "unicorn/prefer-string-trim-start-end": "warn",
    "unicorn/prefer-structured-clone": "warn",
    "unicorn/prefer-spread": "warn",
    "unicorn/filename-case": ["warn", {
      "case": "kebab-case"
    }],
    // Type aware rules
    /// Errors
    "typescript/no-confusing-void-expression": "error",
    "typescript/no-array-delete": "error",
    "typescript/no-duplicate-type-constituents": "error",
    "typescript/no-floating-promises": "error",
    "typescript/no-for-in-array": "error",
    "typescript/no-implied-eval": "error",
    "typescript/no-meaningless-void-operator": "error",
    "typescript/no-misused-promises": "error",
    "typescript/no-misused-spread": "error",
    "typescript/no-mixed-enums": "error",
    "typescript/no-unsafe-unary-minus": "error",
    "typescript/no-unsafe-enum-comparison": "error",
    "typescript/non-nullable-type-assertion-style": "warn",
    "typescript/prefer-return-this-type": "error",
    "typescript/related-getter-setter-pairs": "error",
    "typescript/unbound-method": "error",
    "typescript/use-unknown-in-catch-callback-variable": "error",
    /// Warnings
    "typescript/await-thenable": "warn",
    "typescript/no-base-to-string": "warn",
    "typescript/no-redundant-type-constituents": "warn",
    "typescript/no-unnecessary-boolean-literal-compare": "warn",
    "typescript/no-unnecessary-template-expression": "warn",
    "typescript/no-unnecessary-type-arguments": "warn",
    "typescript/no-unnecessary-type-assertion": "warn",
    "typescript/prefer-promise-reject-errors": "warn",
    "typescript/prefer-reduce-type-parameter": "warn",
    "typescript/only-throw-error": "warn",
    "typescript/promise-function-async": "warn",
    "typescript/require-await": "warn",
    "typescript/switch-exhaustiveness-check": "warn",
    // turns off some rules:
    /// absolute paths point to the public assets
    "import/no-absolute-path": "off",
    /// needed for CSS files
    "import/no-unassigned-import": "off"
  },
  "overrides": [{
    "files": ["**/*.svelte", "**/*.svelte.ts", "**/*.svelte.js"],
    "rules": {
      "unicorn/filename-case": "off"
    }
  }]
}
